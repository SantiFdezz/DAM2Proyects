<selector xmlns:android="http://schemas.android.com/apk/res/android">
    <item>
        <layer-list>
            <item>
                <shape>
                    <solid android:color="@android:color/white" />
                    <stroke android:width="1dp" android:color="@android:color/black" />
                </shape>
